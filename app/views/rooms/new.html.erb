<div class="form-wrapper">
  <h2>施設の新規登録</h2>

  <%= render "shared/error", obj: @room %>

  <%= form_with model: @room do |f| %>
    <div class="form">
      <div class="field">
        <%= f.label :name, "施設名" %><br>
        <%= f.text_field :name, autofocus: true, placeholder: "ルーム名を入力" %>
      </div>

      <div class="field">
        <%= f.label :introduction, "施設詳細" %><br>
        <%= f.text_area :introduction, placeholder: "施設詳細を入力" %>
      </div>

      <div class="field">
        <%= f.label :charge, "料金" %><br>
        <%= f.text_field :charge, placeholder: "1日あたりの料金を入力" %>
      </div>

      <div class="field">
        <%= f.label :address, "住所" %><br>
        <%= f.text_field :address, placeholder: "住所を入力" %>
      </div>

      <div class="field">
        <%= f.label :image, "施設画像" %><br>
        <%= f.file_field :image %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: 'btn' %>
      </div>
      <%= link_to "キャンセル", :back %>


    </div>
  <% end %>
</div>
