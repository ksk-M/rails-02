<div class="form-wrapper">
  <h2>施設の新規登録</h2>

  <%= render "shared/error", obj: @room %>

  <%= form_with model: @room do |f| %>
    <div class="form">
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, autofocus: true, placeholder: "ルーム名を入力" %>
      </div>

      <div class="field">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction, placeholder: "施設詳細を入力" %>
      </div>

      <div class="field">
        <%= f.label :charge %><br>
        <%= f.text_field :charge, placeholder: "1日あたりの料金を入力" %>
      </div>

      <div class="field">
        <%= f.label :address %><br>
        <%= f.text_field :address, placeholder: "住所を入力" %>
      </div>

      <div class="field">
        <%= f.label :image %><br>
        <%= f.file_field :image %>
      </div>

      <%# フォームを非表示にしてuserのidを送信する %>
      <div class="field">
        <%= f.hidden_field :user_id, value: current_user.id %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: 'btn' %>
      </div>
      <%= link_to "キャンセル", :back %>


    </div>
  <% end %>
</div>
